---
services:

  thiss-js:
    image: 'docker.sunet.se/thiss-js:<%= @ds_version_prod %>'
    restart: always
    ports:
     - 80:80
    volumes:
     - /etc/ssl:/etc/ssl
     - /etc/passwd:/etc/passwd:ro
     - /etc/group:/etc/group:ro
    environment:
      - BASE_URL=<%= @base_url %>
      - MDQ_URL=<%= @final_mdq_search_url %>
      - SEARCH_URL=<%= @final_mdq_search_url %>
      - STORAGE_DOMAIN=<%= @domain %>
      - LOGLEVEL=warn
      - DEFAULT_CONTEXT=<%= @context %>
<% if @mdq_hostport -%>
      - MDQ_HOSTPORT=<%= @mdq_hostport %>
<% end -%>
      - COMPONENT_URL=<%= @component_url %>/cta/
      - PERSISTENCE_URL=<%= @persistence_url %>/ps/
      - CACHE_CONTROL=<%= @cache_control_prod %>
      - WHITELIST=<%= @whitelist %>
    logging:
      driver: syslog
    hostname: <%= @networking['fqdn']%>

networks:
  default:
    driver_opts:
      com.docker.network.bridge.name: br-js